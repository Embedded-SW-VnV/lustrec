open Ocamlbuild_plugin
open Command
;;

dispatch begin function
| After_rules ->
    (* We declare external libraries *)
    ocaml_lib ~extern:true ~dir:"@OCAMLGRAPH_PATH@" "graph";
  if true (* @CC_NOASNEEDED@ *) then
    flag ["ocaml"; "link"]
      (S [A"-cclib";A"-Wl,--no-as-needed"]);
| _ -> ()
end

